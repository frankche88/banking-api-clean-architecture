<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="banking.security.domain.entity.User" table="users">
        <id name="username" type="string" >
            <column name="username" length="45" not-null="true"/>
        </id>
        <property name="customerId" type="long">
            <column name="customer_id" not-null="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="60" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="60" not-null="false" />
        </property>
        <property name="enabled" type="boolean">
            <column name="enabled" not-null="true" />
        </property>
        <set name="userRole" table="user_roles" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="username" length="45" not-null="true" />
            </key>
            <one-to-many class="banking.security.domain.entity.UserRole" />
        </set>
    </class>
</hibernate-mapping>
